<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.EAMS_Project_Fall2024"
        tools:targetApi="31">

        <!-- Existing Activities -->
        <activity android:name=".OrganizerSignUpActivity" android:exported="false" />
        <activity android:name=".OrganizerHomepageActivity" android:exported="false" />
        <activity android:name=".AdminHomepageActivity" android:exported="false" />
        <activity android:name=".LoginActivity" android:exported="false" />
        <activity android:name=".AttendeeHomepageActivity" android:exported="false" />
        <activity android:name=".AttendeeSignUpActivity" android:exported="false" />
        <activity android:name=".UpcomingEventsActivity" />
        <activity android:name=".PastEventsActivity" />
        <activity android:name=".SignupListActivity" android:exported="false" />



        <!-- Main Activity -->
        <activity android:name=".MainActivity" android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- New Activities for Pending, Rejected, and Approved Requests -->
        <activity android:name=".PendingRequestsActivity" android:exported="false" />
        <activity android:name=".RejectedRequestsActivity" android:exported="false" />
        <activity android:name=".ApprovedRequestsActivity" android:exported="false" />

        <meta-data
            android:name="com.google.firebase.database.FirebaseDatabase"
            android:value="true" />
    </application>
</manifest>
