<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    android:padding="16dp">


    <!-- App Name -->
    <TextView
        android:id="@+id/appName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:text="EAMS"
        android:textColor="#BB86FC"
        android:textSize="48sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Tagline -->
    <TextView
        android:id="@+id/tagline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Organizer Sign-Up"
        android:textSize="18sp"
        android:textColor="#03DAC6"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintTop_toBottomOf="@id/appName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <!-- Input Fields -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/inputCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tagline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="48dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="#1F1F1F">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- First Name Input -->
            <EditText
                android:id="@+id/OrganizerFirstName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="First Name"
                android:textColor="#E0E0E0"
                android:textColorHint="#757575"
                android:backgroundTint="#E0E0E0"
                android:inputType="text"/>

            <!-- Last Name Input -->
            <EditText
                android:id="@+id/OrganizerLastName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Last Name"
                android:layout_marginTop="16dp"
                android:textColor="#E0E0E0"
                android:textColorHint="#757575"
                android:backgroundTint="#E0E0E0"
                android:inputType="text"/>

            <!-- Email Input -->
            <EditText
                android:id="@+id/OrganizerEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:layout_marginTop="16dp"
                android:textColor="#E0E0E0"
                android:textColorHint="#757575"
                android:backgroundTint="#E0E0E0"
                android:inputType="textEmailAddress"/>

            <!-- Password Input -->
            <EditText
                android:id="@+id/OrganizerPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:layout_marginTop="16dp"
                android:textColor="#E0E0E0"
                android:textColorHint="#757575"
                android:backgroundTint="#E0E0E0"
                android:inputType="textPassword"/>

            <!-- Phone Number Input -->
            <EditText
                android:id="@+id/OrganizerPhoneNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Phone Number"
                android:layout_marginTop="16dp"
                android:textColor="#E0E0E0"
                android:textColorHint="#757575"
                android:backgroundTint="#E0E0E0"
                android:inputType="phone"/>

            <!-- Address Input -->
            <EditText
                android:id="@+id/OrganizerAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Address"
                android:layout_marginTop="16dp"
                android:textColor="#E0E0E0"
                android:textColorHint="#757575"
                android:backgroundTint="#E0E0E0"
                android:inputType="textPostalAddress"/>

            <!-- Organisation Name Input -->
            <EditText
                android:id="@+id/OrganizerOrganisationName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Organisation Name"
                android:layout_marginTop="16dp"
                android:textColor="#E0E0E0"
                android:textColorHint="#757575"
                android:backgroundTint="#E0E0E0"
                android:inputType="text"/>

            <!-- Sign-Up Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/OrganizerSignUpButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sign Up"
                android:textColor="#000000"
                app:cornerRadius="8dp"
                android:backgroundTint="#BB86FC"
                android:layout_marginTop="16dp"/>


        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Footer Links -->
    <TextView
        android:id="@+id/organizerLoginLink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Already have an account? Log in here"
        android:textColor="#757575"
        app:layout_constraintTop_toBottomOf="@id/inputCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/attendeeSignupLink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Looking to be an Attendee? Sign up here"
        android:textColor="#757575"
        app:layout_constraintTop_toBottomOf="@id/organizerLoginLink"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>

