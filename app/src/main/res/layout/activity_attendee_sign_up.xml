<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    android:padding="16dp">

    <!-- App Name -->
    <TextView
        android:id="@+id/appName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:text="EAMS"
        android:textColor="#BB86FC"
        android:textSize="48sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Tagline -->
    <TextView
        android:id="@+id/tagline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Attendee Sign-Up"
        android:textSize="18sp"
        android:textColor="#03DAC6"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintTop_toBottomOf="@id/appName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <!-- Input Fields -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/inputCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tagline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="48dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="#1F1F1F">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- First Name Input -->
            <EditText
                android:id="@+id/attendeeFirstName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#E0E0E0"
                android:hint="First Name"
                android:inputType="text"
                android:textColor="#E0E0E0"
                android:textColorHint="#757575" />

            <!-- Last Name Input -->
            <EditText
                android:id="@+id/attendeeLastName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:backgroundTint="#E0E0E0"
                android:hint="Last Name"
                android:inputType="text"
                android:textColor="#E0E0E0"
                android:textColorHint="#757575" />

            <!-- Email Input -->
            <EditText
                android:id="@+id/attendeeEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:backgroundTint="#E0E0E0"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:textColor="#E0E0E0"
                android:textColorHint="#757575" />

            <!-- Password Input -->
            <EditText
                android:id="@+id/attendeePassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:backgroundTint="#E0E0E0"
                android:hint="Password"
                android:inputType="textPassword"
                android:textColor="#E0E0E0"
                android:textColorHint="#757575" />

            <!-- Phone Number Input -->
            <EditText
                android:id="@+id/attendeePhoneNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:backgroundTint="#E0E0E0"
                android:hint="Phone Number"
                android:inputType="phone"
                android:textColor="#E0E0E0"
                android:textColorHint="#757575" />

            <!-- Address Input -->
            <EditText
                android:id="@+id/attendeeAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:backgroundTint="#E0E0E0"
                android:hint="Address"
                android:inputType="textPostalAddress"
                android:textColor="#E0E0E0"
                android:textColorHint="#757575" />

            <!-- Sign-Up Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/attendeeSignUpButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sign Up"
                android:textColor="#000000"
                app:cornerRadius="8dp"
                android:backgroundTint="#BB86FC"
                android:layout_marginTop="16dp"/>


        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Footer Links -->
    <TextView
        android:id="@+id/attendeeLoginLink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Already have an account? Log in here"
        android:textColor="#757575"
        app:layout_constraintTop_toBottomOf="@id/inputCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/organizerSignupLink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Looking to be an organizer? Sign up here"
        android:textColor="#757575"
        app:layout_constraintTop_toBottomOf="@id/attendeeLoginLink"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>



